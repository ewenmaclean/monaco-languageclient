{
    "name": "monaco-languageclient",
    "version": "0.19.0",
    "description": "Monaco Language client implementation",
    "author": {
      "name": "TypeFox GmbH ",
      "url": "http://www.typefox.io"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/TypeFox/monaco-languageclient.git"
    },
    "bugs": {
        "url": "https://github.com/TypeFox/monaco-languageclient/issues"
    },
    "main": "./lib/index.js",
    "module": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "exports": {
      ".": {
        "import": "./lib/index.js",
        "types": "./lib/index.d.ts"
      }
    },
    "files": [
      "lib",
      "src"
    ],
    "dependencies": {
        "glob-to-regexp": "^0.4.1",
        "vscode-jsonrpc": "6.0.0",
        "vscode-languageclient": "7.0.0",
        "vscode-languageserver-textdocument": "^1.0.4",
        "vscode-uri": "^3.0.3"
    },
    "scripts": {
        "clean": "npx shx rm -fr lib tsconfig.tsbuildinfo",
        "build": "npm run clean && tsc -b .",
        "watch": "tsc -w",
        "prepublishOnly": "npm run dist:amd",
        "dist:amd": "tsc --outDir dist/amd --module amd"
    },
    "devDependencies": {
        "@types/glob-to-regexp": "^0.4.1"
    }
}
